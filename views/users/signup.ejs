<% layout("layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-4 offset-3">
    <h2 col-6 offset-3>SignUp To Continue</h2>
    <form action="/signup" method="post" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="username" class="form-label mt-3">Username</label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks Good</div>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">E-mail</label>
        <input
          name="email"
          id="email"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks Good</div>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks Good</div>
      </div>
      <button class="btn btn-outline-success">Sign in</button>
    </form>
  </div>
</div>
