<% layout("layouts/boilerplate") %>
<style>
  .filters-wrapper {
    background: #fff;
    padding: 0.7rem 0.8rem;
    border-bottom: 1px solid #e3e3e3;
    position: sticky;
    top: 65px; 
    z-index: 5;
  }

  .filters {
    display: flex;
    gap: 1.5rem;
    overflow-x: auto;
    padding: 0.4rem 0;
    -webkit-overflow-scrolling: touch;
  }
  .filters::-webkit-scrollbar {
    display: none;
  }

  .filter {
    text-align: center;
    opacity: 0.7;
    flex: 0 0 auto;
    width: 70px;
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }
  .filter p {
    font-size: 0.75rem;
    margin-top: 3px;
  }

  /* TAX TOGGLE */
  .tax-toggle {
    border: 1px solid #ccc;
    border-radius: 1rem;
    padding: 0.5rem 1rem;
    margin-left: 1rem;
  }

  /* Desktop layout row for filters + tax toggle */
  @media (min-width: 768px) {
    .filters-wrapper {
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    .filters {
      flex-wrap: wrap;
      overflow: visible;
      gap: 2rem;
    }
  }
</style>

<!-- FILTER BAR -->
<div class="filters-wrapper">

  <div class="filters">
    <div class="filter"><i class="fa-solid fa-fire"></i><p>Trending</p></div>
    <div class="filter"><i class="fa-solid fa-bed"></i><p>Rooms</p></div>
    <div class="filter"><i class="fa-solid fa-mountain-city"></i><p>Iconic</p></div>
    <div class="filter"><i class="fa-solid fa-mountain"></i><p>Mountains</p></div>
    <div class="filter"><i class="fa-brands fa-fort-awesome"></i><p>Castles</p></div>
    <div class="filter"><i class="fa-solid fa-person-swimming"></i><p>Pools</p></div>
    <div class="filter"><i class="fa-solid fa-campground"></i><p>Camping</p></div>
    <div class="filter"><i class="fa-solid fa-cow"></i><p>Farms</p></div>
    <div class="filter"><i class="fa-regular fa-snowflake"></i><p>Arctic</p></div>
  </div>

  <!-- TAX TOGGLE (Desktop visible, mobile inside row automatically) -->
  <div class="tax-toggle d-flex align-items-center">
    <div class="form-check form-switch">
      <input class="form-check-input" type="checkbox" id="switchCheckDefault">
      <label class="form-check-label">Display total after taxes</label>
    </div>
  </div>

</div>



  <div class="page-container">

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
         <% for(let i=0;i<data.length;i++){ %>
            <a href="/listings/<%=data[i].id%>" class="listing-link">
            <div class="card col listing-card">
              <img src="<%=data[i].image%>" class="card-img-top" alt="listing_image" style="height: 20rem;">
              <div class="card-img-overlay"></div>
              <div class="card-body">
                <p class="card-text">
                    <b><%=data[i].title %></b> <br>
                    &#8377;<%=data[i].price.toLocaleString("en-IN") %> /night
                   <i class="tax-info">&nbsp;&nbsp; +18% GST</i> 
                </p>
              </div>
            </div>
            </a>
         <% } %>
  </div>

<script>
  let taxSwitch=document.getElementById("switchCheckDefault").addEventListener("click",()=>{
      let taxInfo=document.getElementsByClassName("tax-info");
      for(info of taxInfo){
        if(info.style.display!="inline")
        info.style.display="inline";
        else info.style.display="none";
      }
  })
</script>