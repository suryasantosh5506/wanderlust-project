<% layout("layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3><%= data.title %></h3>
    <br />
  </div>

  <div class="card col-6 offset-3 show-card listing-card">
    <img
      src="<%= data.image %>"
      class="card-img-top show-img"
      alt="listing-image"
    />

    <div class="card-body">
      <p class="card-text">
        <b>Owner:</b>
        <% if (data.owner) { %>
        <b
          ><i><u><%= data.owner.username %></u></i></b
        >
        <% } else { %>
        <span class="text-muted">Unknown</span>
        <% } %>
      </p>

      <p>Description: <%= data.description %></p>
      <p>Price: â‚¹<%= data.price.toLocaleString("en-IN") %></p>
      <p>Location: <%= data.location %></p>
      <p>Country: <%= data.country %></p>
    </div>
  </div>
</div>

<% if (currUser && data.owner && currUser._id.equals(data.owner._id)) { %>
<div class="btns offset-3">
  <form method="GET" action="/listings/<%= data.id %>/edit">
    <button class="btn btn-dark offset-2 edit-btn">Edit</button>
  </form>

  <form method="POST" action="/listings/<%= data.id %>?_method=DELETE">
    <button class="btn btn-dark offset-4">Delete</button>
  </form>
</div>
<% } %> <% if (currUser) { %>
<hr />

<div class="col-8 offset-3">
  <h4>Leave a Review</h4>

  <form
    action="/listings/<%= data.id %>/reviews"
    method="POST"
    class="mb-3 mt-3 needs-validation"
    novalidate
  >
    <fieldset class="starability-slot">
      <input
        type="radio"
        id="no-rate"
        class="input-no-rate"
        name="review[rating]"
        value="0"
        checked
      />
      <input type="radio" id="first-rate1" name="review[rating]" value="1" />
      <label for="first-rate1">1 star</label>

      <input type="radio" id="first-rate2" name="review[rating]" value="2" />
      <label for="first-rate2">2 stars</label>

      <input type="radio" id="first-rate3" name="review[rating]" value="3" />
      <label for="first-rate3">3 stars</label>

      <input type="radio" id="first-rate4" name="review[rating]" value="4" />
      <label for="first-rate4">4 stars</label>

      <input type="radio" id="first-rate5" name="review[rating]" value="5" />
      <label for="first-rate5">5 stars</label>
    </fieldset>

    <div class="mb-3 mt-3">
      <label for="comment" class="form-label">Comments</label>
      <textarea
        name="review[comment]"
        id="comment"
        cols="30"
        rows="5"
        class="form-control"
        required
      ></textarea>
      <div class="invalid-feedback">Please enter valid feedback</div>
    </div>

    <button class="btn btn-outline-success">Submit</button>
  </form>

  <hr />
  <% } %>

  <p><b>All Reviews</b></p>

  <div class="row">
    <% for (let review of data.reviews) { %>
    <div class="card col-5 mb-3 ms-3">
      <div class="card-body">
        <h5>
          <b
            ><i
              ><u
                >By: <% if (review.author) { %> <%= review.author.username %> <%
                } else { %> Unknown <% } %>
              </u></i
            ></b
          >
        </h5>

        <p class="starability-result" data-rating="<%= review.rating %>">
          Rated: <%= review.rating %> stars
        </p>

        <p class="card-text"><%= review.comment %></p>
      </div>

      <form
        action="/listings/<%= data.id %>/reviews/<%= review.id %>?_method=DELETE"
        method="POST"
        class="mb-3"
      >
        <button class="btn btn-sm btn-outline-danger mb-3 mt-3">Delete</button>
      </form>
    </div>
    <% } %>
  </div>
</div>
